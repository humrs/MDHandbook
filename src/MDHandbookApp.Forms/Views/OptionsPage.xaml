<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MDHandbookApp.Forms.Views.OptionsPage"
             Title="Options">
  <StackLayout Margin="20">
    <Button Text="Logout" IsVisible="{Binding ShowLogout}"/>
    <Button Text="Reset Licence Key" IsVisible="{Binding ShowResetLicenceKey}" />
    <Button Text="Refresh Contents" IsVisible="{Binding ShowRefreshContents}" />
    <Button Text="Return to MainPage" Command="{Binding NavigateCommand}" CommandParameter="/MenuPage/NavPage/MainPage" />
    <Button Text="ToggleLoggedIn" Command="{Binding ToggleLoggedIn}" />
    <Button Text="ToggleLicenced" Command="{Binding ToggleLicenced}" />
  </StackLayout>
</ContentPage>